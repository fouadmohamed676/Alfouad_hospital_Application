<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.Services.Details.HospitalDetailsActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:text="التفاصيل"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_700"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText,MissingConstraints,RtlHardcoded,SpUsage,TextSizeCheck" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="300sp"
                android:src="@drawable/png_bg_list"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

            <View
                android:id="@+id/wwww"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:background="@color/gray"
                app:layout_constraintBottom_toBottomOf="@+id/imageView2"
                tools:ignore="MissingConstraints,UnknownId" />

            <LinearLayout
                android:id="@+id/titleLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/wwww">

                <TextView
                    android:id="@+id/nameTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="مستشفى مكه للعيون" />

                <TextView
                    android:id="@+id/aaa"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="2dp"
                    android:text="الاسم"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:id="@+id/vispizLinear"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/gray"
                app:layout_constraintBottom_toBottomOf="@+id/titleLinear"
                tools:ignore="MissingConstraints" />

            <LinearLayout
                android:id="@+id/spizLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/vispizLinear">

                <TextView
                    android:id="@+id/tvspiz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="عظام" />

                <TextView
                    android:id="@+id/texVi6"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:text="التخصص"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:id="@+id/viTitle"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/gray"
                app:layout_constraintBottom_toBottomOf="@+id/spizLinear"
                tools:ignore="MissingConstraints" />

            <LinearLayout
                android:id="@+id/phoneLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/viTitle">

                <TextView
                    android:id="@+id/tvPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="+249116133676" />

                <TextView
                    android:id="@+id/texView6"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:text="الهاتف"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:id="@+id/viphone"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/gray"
                app:layout_constraintTop_toBottomOf="@+id/phoneLinear"
                tools:ignore="MissingConstraints" />

            <LinearLayout
                android:id="@+id/addressLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/viphone">

                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="شارع الاربعين" />

                <TextView
                    android:id="@+id/tv"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:text="العنوان"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:id="@+id/vvv"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/gray"
                app:layout_constraintBottom_toBottomOf="@+id/addressLinear"
                tools:ignore="MissingConstraints" />

            <LinearLayout
                android:id="@+id/localLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/vvv">

                <TextView
                    android:id="@+id/tvLocal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="بحري" />

                <TextView
                    android:id="@+id/loc"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:text="المحليه"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:id="@+id/vilocal"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/gray"
                app:layout_constraintBottom_toBottomOf="@+id/localLinear"
                tools:ignore="MissingConstraints" />

            <LinearLayout
                android:id="@+id/priceLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/vilocal">

                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$100" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" SDG " />

                <TextView
                    android:id="@+id/price"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:text="سعر الدخول"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/gray"
                app:layout_constraintBottom_toBottomOf="@+id/priceLinear"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/tvDoctors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:background="@color/gray"
                android:gravity="center"
                android:text="الاطباء"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/priceLinear"
                tools:ignore="MissingConstraints" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/hospital_details"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5sp"
                app:layout_constraintTop_toBottomOf="@+id/tvDoctors"
                tools:ignore="MissingConstraints" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>